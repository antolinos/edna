testit=$(pgrep notifd)
if [ "$testit" = "" ]; then
  LD_LIBRARY_PATH=/segfs/tango/release/centos5/lib/:$LD_LIBRARY_PATH /segfs/tango/release/centos5_64/bin/notifd -n >>/dev/null 2>&1 & 
  sleep 3 
  LD_LIBRARY_PATH=/segfs/tango/release/centos5/lib/:$LD_LIBRARY_PATH /segfs/tango/release/centos5_64/bin/notifd2db
  sleep 3
fi

if [ ! -d ${HOME}/log ];
then
    mkdir ${HOME}/log
fi
now=$(date +"%Y%m%dT%H%M%S")

baseLog=/tmp
export TestSpace=$baseLog/edna-$now
export log=${HOME}/log/tango-edna-${now}
if [ ! -d ${TestSpace} ] ;
then
	mkdir ${TestSpace}
	fi

PythonProg=$(dirname $0)/tango-EdnaDS.py
echo "Server Mode"
cd $TestSpace
#nohup $PYTHON $PythonProg ${1:+"$@"} > ${HOME}/log/edna-tango-$(date +"%Y%m%dT%H%M%S").log 2>&1 &
$PYTHON $PythonProg ${1:+"$@"} 

